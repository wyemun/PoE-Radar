{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"incremental": true,
		"target": "es2016",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"allowJs": true,
		"checkJs": false,
		"strict": true,
		"alwaysStrict": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*", "jest"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/__mocks__/*"
	]
}